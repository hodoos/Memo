<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.hodoos.memo.post.dao.PostDAO">

	<insert id="insertPost" parameterType="map">
		INSERT INTO
			`post`
		(
			`userId`
			, `title`
			, `content`
			, `createdAt`
			, `updatedAt`
		)
		VALUE
		(
			#{userId}
			, #{title}
			, #{content}
			, now()
			, now()
		)			
	</insert>
	
	<select id="selectPostList" resultType="com.hodoos.memo.post.model.Post">
		SELECT
			`id`
			, `userId`
			, `title`
			, `content`
			, `createdAt`
			, `updatedAt`
		FROM
			`post`
		WHERE
			`userId` = #{userId}
		ORDER BY
			`id` DESC;
	</select>
	
	<select id="selectPost" parameterType="int"
	resultType="com.hodoos.memo.post.model.Post">
		SELECT
			`id`
			, `userId`
			, `title`
			, `content`
			, `createdAt`
			, `updatedAt`
		FROM
			`post`
		WHERE
			`id` = #{postId}
	</select>
</mapper>